{
  "name": "animespace",
  "version": "0.1.0-beta.20",
  "description": "Create your own Anime Space",
  "keywords": [
    "anime",
    "animespace",
    "cli"
  ],
  "homepage": "https://animespace.onekuma.cn/",
  "bugs": {
    "url": "https://github.com/yjl9903/AnimeSpace/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/AnimeSpace.git",
    "directory": "packages/cli"
  },
  "license": "AGPL-3.0",
  "author": "XLor",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "anime": "./cli.mjs"
  },
  "files": [
    "dist",
    "*.mjs"
  ],
  "scripts": {
    "build": "unbuild && pnpm bundle",
    "bundle": "rimraf bin && ncc build src/cli.ts -m -o bin",
    "dev": "unbuild --stub",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "preversion": "pnpm build"
  },
  "dependencies": {
    "@animespace/animegarden": "workspace:*",
    "@animespace/bangumi": "workspace:*",
    "@animespace/core": "workspace:*",
    "@animespace/local": "workspace:*",
    "@breadc/color": "^0.9.7",
    "@onekuma/map": "^0.1.10",
    "breadc": "^0.9.7",
    "date-fns": "^4.1.0",
    "debug": "^4.4.0",
    "fs-extra": "^11.3.0",
    "open-editor": "^5.1.0",
    "pathe": "^2.0.3",
    "prompts": "^2.4.2",
    "undici": "^7.3.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@vercel/ncc": "^0.38.3",
    "bangumi-data": "^0.3.163"
  },
  "engines": {
    "node": ">=v20.7.0"
  }
}
